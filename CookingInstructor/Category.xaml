<UserControl x:Class="CookingInstructor.Category"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CookingInstructor"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="500">
    <Grid>
        <StackPanel>
            <TextBlock Name ="titleBox" Foreground="#FFFC900E" FontFamily="Typo Round Regular Demo" Margin="0,0,0,5" FontSize="16"></TextBlock>
            <ScrollViewer ScrollViewer.HorizontalScrollBarVisibility="Disabled" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                <StackPanel Name ="imagePane" Orientation="Horizontal" Width="Auto" HorizontalAlignment="Left"/>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
