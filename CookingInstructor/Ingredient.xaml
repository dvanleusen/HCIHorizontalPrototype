<UserControl x:Class="CookingInstructor.Ingredient"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CookingInstructor"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="300"
             Width="420">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <TextBlock Name="quantity" Margin="0,0,5,0"></TextBlock>
                <ComboBox Name="unitBox" Width="0" Height="25" Margin="0,0,5,0"></ComboBox>
                <TextBlock Name="ingredientName"></TextBlock>
            </StackPanel>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Sub:" Margin="0,0,5,0" ></TextBlock>
                <ComboBox  Name="substitutons" Height="25"></ComboBox>
            </StackPanel>
       
    </Grid>
</UserControl>
