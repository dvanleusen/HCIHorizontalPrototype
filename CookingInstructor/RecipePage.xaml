<UserControl x:Class="CookingInstructor.RecipePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CookingInstructor"
              xmlns:vm ="clr-namespace:CookingInstructorViewModel;assembly=CookingInstructorViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="534.666666666667" d:DesignWidth="768">

    <UserControl.Resources>
        <DataTemplate x:Key="IngredientFormat">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding Content}"/>
                <Image Grid.Column="1" Height="16" Source="smallarrow.png"></Image>
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="SubFormat">
            <TextBlock Text="{Binding Content}"></TextBlock>
        </DataTemplate>
    </UserControl.Resources>
    
        
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Grid Margin="0,0,0,10" Grid.Row="0">
                <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.05*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" BorderBrush="#00707070" Foreground="#FFFC900E" Background="#FFFC900E" CommandParameter="Fave" Command="{Binding RelativeSource={RelativeSource AncestorType={x:Type Window}}, Path=DataContext.ButtonPressed}">
                <Image MaxWidth="30">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding InFavourites}" Value="True">
                                    <Setter Property="Source" Value="remove_bookmark.png"></Setter>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding InFavourites}" Value="False">
                                    <Setter Property="Source" Value="bookmark.png"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>
            </Button>
            <TextBlock Grid.Column="2" Text="{Binding Title}" Style="{StaticResource SubTitle}" Margin="10"/>
        </Grid>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="0" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <local:VideoPlayer Video="{Binding VideoPath}" Grid.Row="0" Margin="5"/>
                
                <Grid Grid.Row="1" Background="White" Margin="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="Ingredients" Style="{StaticResource SubSubTitle}" Margin="10"/>
                        <StackPanel Grid.Column="1" Margin="5" Orientation="Vertical">
                            <TextBlock Margin="0,0,0,5" Text="Serves" Style="{StaticResource BaseTitleText}"/>
                            <TextBox Text="{Binding ServingSize, Mode=TwoWay}"></TextBox>
                        </StackPanel>
                    </Grid>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <ListBox Name="Ingredients" Grid.Column="0" ItemTemplate="{StaticResource IngredientFormat}" ItemsSource="{Binding Ingredients}" Margin="10,10,0,10" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="{x:Null}" BorderThickness="0,1,0,0"/>
                        <ListView Grid.Column="1" VerticalAlignment="Stretch" ItemTemplate="{StaticResource SubFormat}" ItemsSource="{Binding ElementName=Ingredients, Path=SelectedItem.Substitutions}" Margin="0, 10, 0, 0" BorderThickness="1"/>
                    </Grid>
                </Grid>
            </Grid>

        <Grid Grid.Column="1" Margin="5" Background="White">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
            
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="50"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="Instructions" Style="{StaticResource SubSubTitle}" Margin="10"/>

                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="5">
                        <TextBlock Text="Prep" Margin="0,0,0,5" Style="{StaticResource BaseTitleText}"/>
                        <TextBlock Text="{Binding PrepTime}"/>
                    </StackPanel>

                <StackPanel Grid.Column="2" Margin="5" Orientation="Vertical">
                        <TextBlock Margin="0,0,0,5" Text="Cook" Style="{StaticResource BaseTitleText}"/>
                        <TextBlock Text="{Binding CookTime}"/>
                    </StackPanel>

                <StackPanel Grid.Column="3" Orientation="Vertical" Margin="5">
                        <TextBlock Text="Total" Margin="0,0,0,5" Style="{StaticResource BaseTitleText}"/>
                        <TextBlock Text="{Binding TotalTime}"/>
                    </StackPanel>
            </Grid>
                <TabControl VerticalAlignment="Stretch" Grid.Row="1">
                    <TabItem Tag="List" Header="List">
                        <ListBox Margin="10" ItemsSource="{Binding Instructions}" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Background="{x:Null}" BorderThickness="0,1,0,0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding}" Margin="0,10,0,0" TextWrapping="Wrap"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </TabItem>
                    <TabItem Header="Notes">
                        <TextBox VerticalAlignment="Stretch"></TextBox>
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
