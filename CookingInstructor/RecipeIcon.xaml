<UserControl x:Class="CookingInstructor.RecipeIcon"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CookingInstructor"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200" 
             MouseEnter="RecipeIcon_MouseEnter"
             MouseLeave="RecipeIcon_MouseLeave">
    <Grid>
        <StackPanel>
            <Image Name="recipePicture" MaxHeight="200" MaxWidth="200" Margin="5"></Image>
            <TextBox Name ="titleBox" MaxWidth="200" FontFamily="Typo Round Regular Demo" Foreground="#FFFC900E" TextAlignment="Center"/>
        </StackPanel>
        
    </Grid>
</UserControl>
